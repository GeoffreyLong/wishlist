    background-color: #EA6E10
  /* Override default hover behaviour */
  .importantFixedButton:hover
    background-color: lighten(#EA6E10, 10)


#userInfoEditDiv
  padding: 20px
  .editCard
    padding: 20px
    #nonMapDiv
      padding-right: 20px

/* Overridde the margins and whatnot of the address entry input */
#addressEditContainer
  margin-bottom: 0px
#addressEdit
  margin-bottom:-24px
#addressEdit.ng-invalid
  margin-bottom: 0px
/* Override the autocomplete addition of a placeholder */
#addressEdit::-webkit-input-placeholder 
  /* Chrome/Opera/Safari */
  opacity: 0
#addressEdit::-moz-placeholder 
  /* Firefox 19+ */
  opacity: 0
#addressEdit:-ms-input-placeholder 
  /* IE 10+ */
  opacity: 0
#addressEdit:-moz-placeholder  
  /* Firefox 18- */
  opacity: 0


#profilePhotoEdit
  /* Height of md-display-3 */
  height: 100px
  width: 100px
  border-radius: 50%
  margin-right: 10%
  cursor: pointer

